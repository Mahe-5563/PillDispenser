<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mahe.pilldispenser">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/pilldispenserlogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/pilldispenserlogo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AlarmActivity" />
        <activity android:name=".TrayACtivity.ActivityTray1" />
        <activity android:name=".Bluetooth" />
        <activity android:name=".TraysActivity"/>
        <receiver android:name=".ClassFiles.AlertReciever" />

        <service android:name=".NotificationReciever" />

        <activity android:name=".TrayACtivity.ActivityTray2"></activity>
    </application>

</manifest>